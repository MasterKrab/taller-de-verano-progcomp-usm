import Layout from '@layouts/Layout.astro'
import { getReadTimeText } from '@utils/readTime'

type Props = CollectionEntry<'posts'>['data'] & {
  content: string
}

const { title, description, publicationDate, updatedDate, heroImage, content } =
  Astro.props
---

