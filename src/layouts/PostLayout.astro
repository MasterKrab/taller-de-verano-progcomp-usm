    {
      heroImage && (
        <Picture
          class="post__hero-image"
          src={heroImage}
          alt={description || ''}
          width={POST_IMAGE_WIDTH}
          height={POST_IMAGE_HEIGHT}
          formats={['avif', 'webp', 'png']}
        />
      )
    }
