---
// Supports weights 300-700
import '@fontsource-variable/inclusive-sans'

import '@styles/modern-normalize.css'
import '@styles/global.css'

import LoadThemeScript from '@components/theme/LoadThemeScript.astro'
import { ClientRouter } from 'astro:transitions'
import FloatingFocus from '@components/FloatingFocus.astro'
import SkipToMainContent from '@components/SkipToMainContent.astro'
import ToolTip from '@components/ToolTip.astro'

import Metadata from '@components/Metadata.astro'
import Header from '@components/Header.astro'
import Footer from '@components/Footer.astro'

interface Props {
  metadata?: {
    title?: string
    description?: string
    image?: string
    url?: string
    author?: string
    tags?: string[]
    date?: string
  }
}

const { metadata = {} } = Astro.props as Props
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <meta name="robots" content="index, follow, max-image-preview:large" />
    <slot name="head" />
    <meta name="generator" content={Astro.generator} />
    <Metadata {...metadata} />
    <ClientRouter />
    <LoadThemeScript />
    <FloatingFocus />
    <ToolTip />
  </head>
  <body>
    <SkipToMainContent />
    <Header />
    <main id="main-content" class="main">
      <slot transition:animate="slide" />
    </main>

    <Footer />
  </body>
</html>

<style>
  .main {
    padding: 1rem;
    width: 100%;
    max-width: var(--max-page-width);
  }
</style>
