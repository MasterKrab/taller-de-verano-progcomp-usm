{
  "$schema": "https://biomejs.dev/schemas/2.3.8/schema.json",
  "files": {
    "includes": ["src/**/*", "!!/.astro/**", "!!/dist/**", "!!/node_modules/**"]
  },
  "formatter": {
    "enabled": false
  },
  "javascript": {
    "formatter": {
      "enabled": false
    }
  },

  "overrides": [
    {
      "includes": ["**/*.{js,jsx,ts,tsx,json,astro,svelte,vue,css}"],
      "linter": {
        "rules": {
          "style": {
            "useConst": "off",
            "useImportType": "off"
          },
          "correctness": {
            "noUnusedVariables": "off",
            "noUnusedImports": "off"
          },
          "suspicious": {
            "useBiomeIgnoreFolder": "off",
            "noBiomeFirstException": "off"
          }
        }
      }
    }
  ]
}
