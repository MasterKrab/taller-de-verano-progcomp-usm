{
  "$schema": "https://biomejs.dev/schemas/2.3.8/schema.json",
  "files": {
    "includes": ["!!/.astro/**", "!!/dist/**", "!!/node_modules/**"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "semicolons": "asNeeded",
      "arrowParentheses": "always"
    }
  },
  "overrides": [
    {
      "includes": ["**/*.{js,jsx,ts,tsx,json,astro,svelte,vue}"],
      "linter": {
        "rules": {
          "style": {
            "useConst": "off",
            "useImportType": "off"
          },
          "correctness": {
            "noUnusedVariables": "off",
            "noUnusedImports": "off"
          },
          "suspicious": {
            "useBiomeIgnoreFolder": "off",
            "noBiomeFirstException": "off"
          }
        }
      }
    }
  ]
}
